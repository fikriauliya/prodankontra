.panel.panel-default
  .panel-heading
    %b
      {{opinion.title}}
  .panel-body.opinion
    .pull-left.vote-counter
      %b
        0
        %br
        Votes
    %div
      %p
        Penulis:
        %b
          {{opinion.author}}
      %p.with-newline<
        {{opinion.content | limitTo: 1000}}
      .pull-right
        %a{'ng-click' => 'vm.showFullOpinion(opinion)', 'class' => 'btn btn-info btn-sm'}
          %span.glyphicon.glyphicon-search
          Read more...